<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_7sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageResidence"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_120sdp"/>
        <TextView
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_98sdp"
            android:id="@+id/rateStarResidence"
            android:gravity="center"
            android:background="@drawable/bg_ratestar"
            android:textColor="@color/white"
            android:text="7.0"
            android:textStyle="bold"
            android:layout_width="@dimen/_22sdp"
            android:layout_height="@dimen/_18sdp"/>
        <TextView
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_98sdp"
            android:id="@+id/rateResidence"
            android:layout_toEndOf="@id/rateStarResidence"
            android:text="Rate Residence"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/nameResidence"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:textSize="@dimen/_18sdp"
            android:layout_below="@id/imageResidence"
            android:textStyle="bold"
            android:text="Name Residence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/typeResidence"
            android:layout_below="@id/nameResidence"
            android:layout_marginLeft="@dimen/_20sdp"
            android:text="Type Residence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:id="@+id/iconLocation"
            android:layout_toRightOf="@+id/typeResidence"
            android:layout_below="@id/nameResidence"
            android:background="@drawable/ic_baseline_location_on_24"
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"/>
        <TextView
            android:layout_toRightOf="@id/iconLocation"
            android:layout_below="@id/nameResidence"
            android:text="Address Residence"
            android:id="@+id/addressResidence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_margin="@dimen/_12sdp"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_bt_love"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp">
            <ImageView
                android:id="@+id/btLove"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:background="@drawable/ic_baseline_favorite_24_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/vien_bo_tron"
            android:layout_margin="@dimen/_10sdp"
            android:layout_below="@id/addressResidence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/priceResidence"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:text="500.000 đ"
                android:textColor="@color/green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="một phòng/mỗi đêm"
                android:layout_below="@id/priceResidence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btShowDetail"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Xem chi tiết"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>