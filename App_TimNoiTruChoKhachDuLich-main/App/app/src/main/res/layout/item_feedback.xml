<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_10sdp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:background="@drawable/bg_avatar"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp">
        <TextView
            android:id="@+id/tvAvatar"
            android:textSize="@dimen/_15sdp"
            android:text="A"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tvUserName"
        android:textColor="@color/black"
        android:textSize="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_40sdp"
        android:text="Huân"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_alignParentRight="true"
        android:id="@+id/tvRateStar"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_20sdp"
        android:background="@drawable/bg_ratestar"
        android:gravity="center"
        android:text="7.0"
        android:textColor="@color/white"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/tvFeedback"
        android:textSize="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/tvUserName"
        android:text="Tuyệt vời.Một sự lựa chọn hoàn hảo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvDayFeedback"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/black"
        android:layout_below="@id/tvFeedback"
        android:textSize="@dimen/_12sdp"
        android:text="Ngày 16-4-2021"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_below="@id/tvDayFeedback"
        android:background="@color/line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"/>
</RelativeLayout>