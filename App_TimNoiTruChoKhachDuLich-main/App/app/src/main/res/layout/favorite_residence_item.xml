<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_9sdp"
    android:layout_marginRight="@dimen/_9sdp"
    android:layout_marginTop="@dimen/_10sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_7sdp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp">
        <ImageView
            android:scaleType="fitXY"
            android:id="@+id/imageResidence"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/nameResidence"
            android:textSize="@dimen/_14sdp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_marginRight="@dimen/_7sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:layout_toRightOf="@id/imageResidence"
            android:textColor="@color/black"
            android:text="Tên khách sạn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/typeResidence"
            android:layout_below="@id/nameResidence"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_toRightOf="@id/imageResidence"
            android:textColor="@color/black"
            android:text="Nhà / Căn hộ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:weightSum="2"
            android:orientation="horizontal"
            android:background="@drawable/vien_bo_tron"
            android:layout_margin="@dimen/_7sdp"
            android:layout_toRightOf="@id/imageResidence"
            android:layout_below="@id/typeResidence"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/priceResidence"
                android:layout_marginLeft="@dimen/_7sdp"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/_14sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textStyle="bold"
                android:textColor="@color/green"
                android:text="Giá VND"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvShowDetail"
                android:layout_marginRight="@dimen/_7sdp"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/_14sdp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textStyle="bold"
                android:text="Xem chi tiết >>"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>