<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.DetailItemAct">
    <RelativeLayout
        android:id="@+id/layoutNotification"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp">
        <Button
            android:id="@+id/btBooking"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/_5sdp"
            android:text="Đặt ngay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <ScrollView
        android:background="@color/white"
        android:layout_above="@id/layoutNotification"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/layoutTop3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.smarteist.autoimageslider.SliderView
                android:id="@+id/cover"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                android:layout_alignParentTop="true"
                app:sliderAnimationDuration="1000"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderIndicatorAnimationDuration="1000"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="@dimen/_3sdp"
                app:sliderIndicatorRadius="@dimen/_2sdp"
                app:sliderIndicatorSelectedColor="@color/white"
                app:sliderIndicatorUnselectedColor="@color/colorBackground"
                app:sliderScrollTimeInSec="5"
                app:sliderStartAutoCycle="true"/>
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerSliderView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_180sdp"
                app:shimmer_base_color="@color/silver"
                app:shimmer_colored="true"
                app:shimmer_highlight_color="@color/silver"
                app:shimmer_duration="2000">
                <ImageView
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </com.facebook.shimmer.ShimmerFrameLayout>
            <RelativeLayout
                android:layout_margin="@dimen/_12sdp"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_bt_love"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp">
                <ImageView
                    android:id="@+id/btLove"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:background="@drawable/ic_baseline_favorite_24_white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <ImageView
                android:layout_margin="@dimen/_12sdp"
                android:background="@drawable/ic_baseline_arrow_back_24_white"
                android:id="@+id/btBack"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"/>
            <TextView
                android:layout_marginTop="@dimen/_15sdp"
                android:textStyle="bold"
                android:textSize="@dimen/_20sdp"
                android:id="@+id/tvNameItem"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:text="Name"
                android:textColor="@color/black"
                android:layout_below="@id/cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/iconAddress"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_below="@id/tvNameItem"
                android:background="@drawable/ic_baseline_location_red_on_24"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_12sdp"/>
            <TextView
                android:textColor="@color/blue"
                android:id="@+id/tvAddressItem"
                android:layout_marginTop="@dimen/_13sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_below="@id/tvNameItem"
                android:text="Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/layoutDescription"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@id/tvAddressItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@color/line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>
                <TextView
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:text="MÔ TẢ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:id="@+id/tvDescriptionItem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/line"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layoutComment"
                android:orientation="vertical"
                android:layout_below="@+id/layoutDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:text="Ý KIẾN KHÁCH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_15sdp"
                    android:text="ĐÁNH GIÁ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:background="@drawable/bg_ratestar"
                        android:id="@+id/tvRateStar"
                        android:gravity="center"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="8.5"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"/>
                    <TextView
                        android:id="@+id/tvRate"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_20sdp"
                        android:text="Rate Residence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <TextView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textSize="@dimen/_15sdp"
                    android:text="NHẬN XÉT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:text="Nice room and service"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:background="@color/line"
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>
            </LinearLayout>
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_marginTop="@dimen/_210sdp"
                android:layout_centerHorizontal="true"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>